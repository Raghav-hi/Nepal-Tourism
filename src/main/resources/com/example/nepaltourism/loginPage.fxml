<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.LoginController"
            style="-fx-background-color: #f5f7fa;">

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
            <!-- Nepal Tourism Logo/Title -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Nepal Tourism" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Text text="Experience the Himalayas" style="-fx-font-size: 16; -fx-fill: #7f8c8d;"/>
            </VBox>

            <!-- Login Form Card -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40 50; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Login to Your Account" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Email Field -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <TextField promptText="Enter your email" style="-fx-pref-width: 300; -fx-pref-height: 40;" fx:id="EmailField"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <PasswordField promptText="Enter your password" style="-fx-pref-width: 300; -fx-pref-height: 40;" fx:id="PasswordField" />
                </VBox>

                <!-- Role Selection -->
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Select your role" style="-fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <ComboBox style="-fx-pref-width: 300; -fx-pref-height: 40;"
                              fx:id="UserSelectComboBox"/>
                    </VBox>
                </VBox>

                <!-- Login Button -->
                <Button fx:id="loginBtn"
                        text="Login"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-pref-width: 300; -fx-pref-height: 40;"
                        onAction="#onLoginClick"/>

                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d;"/>
                    <Button onAction="#onRegisterClick"
                            text="Register here"
                            style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-weight: bold; -fx-padding: 0; -fx-underline: true; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 15;">
            <Label text="Â© 2025 Nepal Tourism. All rights reserved." style="-fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>
</BorderPane>