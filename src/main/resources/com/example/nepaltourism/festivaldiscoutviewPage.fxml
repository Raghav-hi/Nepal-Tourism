<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.Controllers.FestivalDiscountViewController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;" fx:id="vbox">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label text="Nepal Tourism" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button text="Home" style="-fx-text-fill: white; -fx-background-color: #3498db; -fx-font-weight: bold;" onAction="#goHome"/>
                <Button text="Attractions" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goAttraction"/>
                <Button text="My Bookings" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goBookings"/>
                <Button text="User" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goUserEdit"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-font-weight: bold;" onAction="#onLogout"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="festivalTable">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colStartDate" text="Start Date" prefWidth="120"/>
                <TableColumn fx:id="colEndDate" text="End Date" prefWidth="120"/>
                <TableColumn fx:id="colDiscount" text="Discount" prefWidth="100"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Optional Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 10;">
            <Label text="Celebrate Nepal's rich cultural heritage with our special festival offers!" style="-fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>
</BorderPane>