<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.Controllers.FestivalDiscountViewController"
            >

    <top>
        <VBox fx:id="vbox" style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Nepal Tourism" />
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button onAction="#goHome" style="-fx-text-fill: white; -fx-background-color: #3498db; " text="%homeOption" />
                <Button onAction="#goAttraction" style="-fx-text-fill: white; -fx-background-color: transparent;" text="%attractionOption" />
                <Button onAction="#goBookings" style="-fx-text-fill: white; -fx-background-color: transparent;" text="%bookingOption" />
                <Button onAction="#goUserEdit" style="-fx-text-fill: white; -fx-background-color: transparent;" text="%userOption" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#onLogout" style="-fx-text-fill: white; -fx-background-color: #e74c3c; " text="%logoutOption" />
            </HBox>
        </VBox>
    </top>

    <center >
        <TableView fx:id="festivalTable">
            <columns >
                <TableColumn fx:id="colId"  text="%festivalId" style="-fx-font-weight: normal;" />
                <TableColumn fx:id="colName"  text="%festivalName"  style="-fx-font-weight: normal;"/>
                <TableColumn fx:id="colStartDate"  text="%festivalStart" style="-fx-font-weight: normal;" />
                <TableColumn fx:id="colEndDate"  text="%festivalEnd" style="-fx-font-weight: normal;" />
                <TableColumn fx:id="colDiscount"  text="%festivalDiscount" style="-fx-font-weight: normal;" />

            </columns>
        </TableView>

    </center>

    <!-- Optional Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 10;">
            <Label style="-fx-text-fill: #ecf0f1;" text="%festivalFooter" />
        </HBox>
    </bottom>
</BorderPane>
