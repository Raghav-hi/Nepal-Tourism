<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="AttractionsViewController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label text="Nepal Tourism" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button text="Home" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
                <Button text="Attractions" style="-fx-text-fill: white; -fx-background-color: #3498db; -fx-font-weight: bold;"/>
                <Button text="My Bookings" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
                <Button text="User" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
                <Label text="Popular Attractions" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <!-- Mustang Section -->
                <VBox style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 20;">
                    <HBox spacing="20">
                        <!-- Placeholder image -->

                        <VBox spacing="10" style="-fx-padding: 10;">
                            <Label text="Mustang" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                            <Label text="Description" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                            <Text text="Mustang, known as the 'Forbidden Kingdom', is a remote region in the Himalayas with Tibetan-influenced culture, ancient monasteries, and dramatic landscapes. Experience the unique Upper Mustang trek through arid valleys and colorful rock formations."
                                  wrappingWidth="400" style="-fx-font-size: 14;"/>
                            <Button text="Book" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" onAction="#bookMustang"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Pokhara Section -->
                <VBox style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 20;">
                    <HBox spacing="20">
                        <!-- Placeholder image -->

                        <VBox spacing="10" style="-fx-padding: 10;">
                            <Label text="Pokhara" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                            <Label text="Description" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                            <Text text="Pokhara is Nepal's adventure capital, nestled beside Phewa Lake with stunning views of the Annapurna Range. Enjoy paragliding, trekking, boating, and exploring caves. Gateway to the Annapurna Circuit and famous for its peaceful atmosphere."
                                  wrappingWidth="400" style="-fx-font-size: 14;"/>
                            <Button text="Book" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;" onAction="#bookPokhara"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 10;">
            <Label text="Â© 2025 Nepal Tourism Board. All rights reserved." style="-fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>
</BorderPane>