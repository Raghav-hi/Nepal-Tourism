<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.Controllers.AttractionsViewController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;" fx:id="vbox">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label text="Nepal Tourism" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button text="%homeOption" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goHome"/>
                <Button text="%attractionOption" style="-fx-text-fill: white; -fx-background-color: #3498db; " onAction="#goAttraction"/>
                <Button text="%bookingOption"  style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goBookings"/>
                <Button text="%userOption" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goUserEdit"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="%logoutOption" style="-fx-text-fill: white; -fx-background-color: #e74c3c; " onAction="#onLogout"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS" hbarPolicy="NEVER" styleClass="scroll-pane">
            <VBox>
                <FlowPane fx:id="attractionContainer" hgap="20" vgap="20" prefWrapLength="900" alignment="TOP_LEFT" />
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 10;">
            <Label text="%footerText" style="-fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>
</BorderPane>