<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.adminSubControllers.AdminBookingController">
    <top>
        <VBox style="-fx-background-color: #2c3e50;" fx:id="vbox">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Nepal Tourism" />
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Home" onAction="#onHome"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Attractions" onAction="#onAttractions"/>
                <Button style="-fx-text-fill: white; -fx-background-color: #3498db; -fx-font-weight: bold;" text="Bookings" onAction="#onBookings"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Tourists" onAction="#onTourists"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Guides" onAction="#onGuides"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-font-weight: bold;" text="Logout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <Text text="Booking Management" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <TableView fx:id="bookingTable">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colUm" text="UM" prefWidth="50"/>
                    <TableColumn fx:id="colGid" text="Gid" prefWidth="50"/>
                    <TableColumn fx:id="colAm" text="AM" prefWidth="50"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="colDiscount" text="Discount" prefWidth="75"/>
                    <TableColumn fx:id="colCancelled" text="Cancelled?" prefWidth="75"/>
                    <TableColumn fx:id="colRd" text="Rd" prefWidth="50"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>