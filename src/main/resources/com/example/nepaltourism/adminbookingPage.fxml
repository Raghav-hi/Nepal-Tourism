<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nepaltourism.adminSubControllers.AdminBookingController" fx:id="mainpane">
    <top>
        <VBox style="-fx-background-color: #2c3e50;" fx:id="vbox">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Nepal Tourism" />
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Home" onAction="#onHome"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Attractions" onAction="#onAttractions"/>
                <Button style="-fx-text-fill: white; -fx-background-color: #3498db; -fx-font-weight: bold;" text="Bookings" onAction="#onBookings"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Tourists" onAction="#onTourists"/>
                <Button style="-fx-text-fill: white; -fx-background-color: transparent;" text="Guides" onAction="#onGuides"/>
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-font-weight: bold;" text="Logout" onAction="#onClickLogout"/>
            </HBox>
        </VBox>
    </top>
<center>
    <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" prefWidth="800" prefHeight="400">
        <content>
            <TableView fx:id="bookingsTable" styleClass="data-table" prefWidth="800">
                <columns>
                    <TableColumn text="ID" fx:id="idColumn" styleClass="column-header" prefWidth="100"/>
                    <TableColumn text="Uid" fx:id="uidColumn" styleClass="column-header" prefWidth="100"/>
                    <TableColumn text="Gid" fx:id="gidColumn" styleClass="column-header" prefWidth="100"/>
                    <TableColumn text="Aid" fx:id="aidColumn" styleClass="column-header" prefWidth="100"/>
                    <TableColumn text="Date" fx:id="dateColumn" styleClass="column-header" prefWidth="180"/>
                    <TableColumn text="Discount" fx:id="discountColumn" styleClass="column-header" prefWidth="160"/>
                    <TableColumn text="Cancelled?" fx:id="cancelledColumn" styleClass="column-header" prefWidth="160"/>
                    <TableColumn text="fid" fx:id="fidColumn" styleClass="column-header" prefWidth="100"/>

                    <TableColumn text="Actions" fx:id="actionsColumn" styleClass="column-header" prefWidth="200"/>
                </columns>
            </TableView>
        </content>
    </ScrollPane>
</center>

</BorderPane>