<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MyBookingGuideController"
            style="-fx-background-color: #f5f7fa;">

    <!-- Top Navigation Bar -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label text="Nepal Tourism" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button text="Home" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
                <Button text="My Bookings" style="-fx-text-fill: white; -fx-background-color: #3498db; -fx-font-weight: bold;"/>
                <Button text="User" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" style="-fx-text-fill: white; -fx-background-color: #e74c3c; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 30;">
            <Label text="My Bookings" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Bookings Container -->
            <VBox spacing="20" style="-fx-padding: 0 50;">
                <!-- Mustang Booking Card -->
                <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                    <VBox style="-fx-padding: 20; -fx-spacing: 10;" alignment="TOP_LEFT">
                        <Label text="Mustang" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Text text="Experience the 'Forbidden Kingdom' with its Tibetan-influenced culture, ancient monasteries, and dramatic landscapes."
                              wrappingWidth="400" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                        <Text text="Booking Date: 2023-10-15" style="-fx-font-size: 14; -fx-fill: #34495e; -fx-font-weight: bold;"/>
                        <Text text="Status: Confirmed" style="-fx-font-size: 14; -fx-fill: #27ae60; -fx-font-weight: bold;"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="Cancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-margin: 20;">
                        <HBox.margin>
                            <Insets right="20" top="20" bottom="20"/>
                        </HBox.margin>
                    </Button>
                </HBox>

                <!-- Pokhara Booking Card -->
                <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                    <VBox style="-fx-padding: 20; -fx-spacing: 10;" alignment="TOP_LEFT">
                        <Label text="Pokhara" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Text text="Enjoy the stunning views of the Annapurna range, serene lakes, and thrilling adventure activities in Nepal's tourism capital."
                              wrappingWidth="400" style="-fx-font-size: 14; -fx-fill: #7f8c8d;"/>
                        <Text text="Booking Date: 2023-11-05" style="-fx-font-size: 14; -fx-fill: #34495e; -fx-font-weight: bold;"/>
                        <Text text="Status: Confirmed" style="-fx-font-size: 14; -fx-fill: #27ae60; -fx-font-weight: bold;"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="Cancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-margin: 20;">
                        <HBox.margin>
                            <Insets right="20" top="20" bottom="20"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 15;">
            <Label text="Manage your bookings and plan your next adventure!" style="-fx-text-fill: #ecf0f1;"/>
        </HBox>
    </bottom>
</BorderPane>