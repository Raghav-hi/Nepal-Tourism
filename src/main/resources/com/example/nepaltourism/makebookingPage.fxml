<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.nepaltourism.Controllers.MakeBookingController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;" fx:id="vbox">
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1a252f; -fx-padding: 10;">
                <!-- Use placeholder image for Scene Builder -->
                <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                    <Image url="https://via.placeholder.com/40" />
                </ImageView>
                <Label text="Nepal Tourism" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                <Button text="%homeOption" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goHome"/>
                <Button text="%attractionOption" style="-fx-text-fill: white; -fx-background-color: #3498db; " onAction="#goAttraction"/>
                <Button text="%bookingOption" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goBookings"/>
                <Button text="%userOption" style="-fx-text-fill: white; -fx-background-color: transparent;" onAction="#goUserEdit"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="%logoutOption" style="-fx-text-fill: white; -fx-background-color: #e74c3c; " onAction="#onLogout"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="428.0" prefWidth="616.0" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 28;  -fx-text-fill: #2c3e50;" text="%bookYourAdventure" />

            <!-- Attraction Info -->
            <HBox alignment="CENTER" spacing="20">

                <VBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mustang" fx:id="attractionNameLabel" />
                    <Text style="-fx-font-size: 14; -fx-fill: #7f8c8d;" text="Experience the 'Forbidden Kingdom' with its Tibetan-influenced culture, ancient monasteries, and dramatic landscapes." wrappingWidth="400"
                    fx:id="attractionDescLabel"/>
                </VBox>
            </HBox>

            <!-- Booking Form -->
            <GridPane hgap="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1; -fx-background-radius: 10;" vgap="15">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150" />
                    <ColumnConstraints prefWidth="300" />
                </columnConstraints>

                <!-- Row 0: Booking Date -->
                <Label  text="%bookingDateLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                <!-- Row 1: Festival Discounts -->
                <Label text="%festivalDiscountLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <ComboBox fx:id="festivalComboBox" prefWidth="200">

                    </ComboBox>
                </HBox>

                <!-- Row 2: Discount Rate -->
                <Label  text="%discountLabel" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <Label fx:id="discountLabel" style="-fx-text-fill: #e74c3c; " text="0%" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <DatePicker style="-fx-pref-width: 200;" GridPane.columnIndex="1" GridPane.rowIndex="0"  fx:id="bookingDatePicker" />
<!-- Row 3: Action Buttons -->
                <HBox spacing="20" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <Button style="-fx-background-color: #95a5a6; -fx-text-fill: white;  -fx-padding: 8 20;" text="%cancelButton" onAction="#goAttraction"/>
                    <Button style="-fx-background-color: #27ae60; -fx-text-fill: white;  -fx-padding: 8 20;" text="%saveButton" onAction="#onSubmit"/>
                </HBox>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </center>

    <!-- Optional Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1a252f; -fx-padding: 10;">
            <Label style="-fx-text-fill: #ecf0f1;" text="%footerMessage" />
        </HBox>
    </bottom>
</BorderPane>
